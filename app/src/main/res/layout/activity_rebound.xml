    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReboundActivity">

    <www.ccb.com.doublefragmentswitch.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
